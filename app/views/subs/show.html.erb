<h1><%= @sub.title %></h1>

<%= @sub.description %>

<div class="container">
<% @sub.posts.each do |post| %>
<div class="row">
  <div class="form-group">
    <div class="form-control">
        <div class="col-xs-4">
          <%= link_to post.title, post_url(post) %> (score: <%= post.vote_score %>)
        </div>
        <div class="col-xs-2">
          <%= button_to "+",
            post_votes_url(post),
            method: :post,
            params: {
              votable_id: post.id,
              votable_type: post.class,
              value: 1 }
          %>
        </div>
        <div class="col-xs-2">
          <%= button_to "-",
            post_votes_url(post),
            method: :post,
            params: {
              votable_id: post.id,
              votable_type: post.class,
              value: -1 }
          %>
        </div>
    </div>
  </div>
</div>
<% end %>
</div>

<p><%= link_to "edit sub", edit_sub_url(@sub) %></p>

<p>
  <%= button_to "DELETE SUB", sub_url, method: :delete %>
</p>

<p>
  <%= link_to "Back to all subs", subs_url %>
</p>
