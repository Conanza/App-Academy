<h1>ADD A BAND</h1>

<%= render "shared/errors" %>

<form action="<%= bands_url %>" method="POST">
  <%= csrf_auth_token %>

  <label for="band_name">Band Name:
    <input 
      type="text" 
      id="band_name" 
      name="band[name]" 
      value="<%= @band.name %>"
    >
  </label>

  <input type="submit" value="Add Band">
</form>


<%= link_to "Cancel", bands_url %>